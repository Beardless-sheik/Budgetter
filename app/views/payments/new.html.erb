
<% if @categories_available %>
<%= form_with url: category_payments_path, class: 'sign-up-form' do |f| %>
  <div class="sign-up-field">
    <%= f.text_field :Name, { class: "sign-up-input", autofocus: true, placeholder: "Payment Name"} %>
  </div>

  <div class="sign-up-field">
    <%= f.number_field :Amount, step: 0.01, placeholder: "Amount", class: "sign-up-input" %>
  </div>

  <div class="sign-up-field">
    <%= f.label :payment_category_id, "Category", class: "category-label" %>
    <%= f.select(:payment_category_id, @categories_available.map {|category| [category.Name, category.id]}, {}, { class: "category-select-input"} ) %>
  </div>

  <div class="create-inventory-button-container">
    <%= f.submit "Create Payment", class: "create-inventory-button-link m-auto" %>
  </div>
<% end %>

<% else %>
  <p> No Categories Available, Please Add A Category To Add A Payment </p>
<% end %>
