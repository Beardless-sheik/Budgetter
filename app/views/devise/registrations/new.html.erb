<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'sign-up-form'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="NavBar">
  <h1 class="header-text">REGISTER</h1>
    <div class="sign-up-actions">
    <%= f.submit "Sign up", class: "sign-up-button m-auto" %>
  </div>
</div>

  <div class="sign-up-field">
    <%= f.text_field :Name, { class: "sign-up-input", autofocus: true, placeholder: "Full Name"} %>
  </div>

  <div class="sign-up-field">
    <%= f.email_field :email, autofocus: true, placeholder: "email", class: "sign-up-input" %>
  </div>

  <div class="sign-up-field">
    <%= f.password_field :password, placeholder: "New-Password", class: "sign-up-input" %>
  </div>

  <div class="sign-up-field">
    <%= f.password_field :password_confirmation, placeholder: "New-Password", class: "sign-up-input" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
